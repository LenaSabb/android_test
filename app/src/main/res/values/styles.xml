<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GameTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:fontFamily">@font/sk_modernist_bold</item>
    </style>

    <style name="GameReview"/>

    <style name="GameReview.Title" parent="GameReview">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#EEF2FB</item>
        <item name="android:fontFamily">@font/sk_modernist_bold</item>
    </style>

    <style name="GameReview.Count" parent="GameReview">
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="GameReview.Count.Small" parent="GameReview.Count">
        <item name="android:textColor">#45454D</item>
    </style>

    <style name="GameReview.Count.Full" parent="GameReview.Count">
        <item name="android:textColor">#A8ADB7</item>
    </style>

    <style name="GameReview.Author" parent="GameReview">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="GameReview.Date" parent="GameReview">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#66FFFFFF</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="GameReview.Text" parent="GameReview">
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#A8ADB7</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="GameDescription">
        <item name="android:textAlignment">textStart</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B3EEF2FB</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="GameRating">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sk_modernist_bold</item>
    </style>

    <style name="GameTag" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">#14314D</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#41A1EA</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="InstallButton">
        <item name="android:fontFamily">@font/sk_modernist_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#050B18</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>